{
  "name": "GreenTea",
  "version": "1.0.0",
  "description": "A simple, minimalist code editor written in Javascript, HTML and CSS using Electron and the wonderful Ace editor",
  "main": "main.js",
  "author" : "Rudolph Venter <rudolph.rv@gmail.com>",
  "homepage": "https://github.com/rudolphventer/GreenTea",
  "scripts": {
    "postinstall":"electron-builder isntall-app-deps",
    "start": "electron .",
    "buildtest": "electron-packager . --out=dist/win --platform=win32 --arch=x64 --icon=./icon.ico --asar=true --overwrite",
    "buildwindows": "electron-builder -w",
    "buildlinux": "electron-builder -l"
  },
  "build": {
    "appId": "com.greentea.editor.app",
    "productName": "GreenTea",
    "fileAssociations": {
      "ext":"txt",
      "name": "GreenTea File",
      "description": "A plain text file in the GreenTea format",
      "icon": "./icon.ico",
      "role": "Editor"
    },
    "mac": {
			"category": "public.app-category.development"
		},
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux":{
      "target":["appimage", "deb"],
      "icon": "./256x256.icns",
      "category": "Development"
    }
  },
  "license": "ISC",
  "devDependencies": {
    "electron": "^8.0.3"
  },
  "dependencies": {
    "bootstrap": "^4.1.3",
    "jquery": "^3.4.1",
    "node-ipc": "^9.1.1",
    "popper.js": "^1.14.4"
  }
}
